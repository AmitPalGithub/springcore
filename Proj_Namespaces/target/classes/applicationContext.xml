<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:c="http://www.springframework.org/schema/c"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


		<bean class="java.util.Date" id="d1" p:year="11" p:month="8" p:date="10"/>
		<bean class="com.app.beans.Student" id="stu" p:name="Amit Pal" p:date-ref="d1"/>
		
		
		<bean class="java.util.Date" id="d2" p:year="2024" p:month="5" p:date="20"/>
		<bean class="com.app.beans.Employee" id="emp" c:name="Raju Tiwari" c:dateOfJoin-ref="d2"/>
	
</beans>